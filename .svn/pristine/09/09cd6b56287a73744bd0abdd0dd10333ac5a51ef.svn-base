<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    tools:context="com.dumai.loan.activity.FinancialProofActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pixel_size_151"
        android:layout_marginBottom="@dimen/pixel_size_15"
        android:layout_marginLeft="@dimen/pixel_size_10"
        android:layout_marginRight="@dimen/pixel_size_10"
        android:layout_marginTop="@dimen/pixel_size_29"
        android:background="@drawable/full_data_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/text_size_15"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/proof_material"
            android:textColor="@color/black_1"
            android:textSize="@dimen/text_size_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/pixel_size_15"
            android:background="@drawable/line_empty" />

        <GridView
            android:id="@+id/grid_material"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/pixel_size_10"
            android:layout_marginLeft="@dimen/pixel_size_10"
            android:layout_marginRight="@dimen/pixel_size_10"
            android:layout_marginTop="@dimen/pixel_size_10"
            android:layout_weight="2"
            android:horizontalSpacing="@dimen/pixel_size_2"
            android:numColumns="3"
            android:verticalSpacing="@dimen/pixel_size_2" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_can_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_size_14"
        android:autoLink="web"
        android:gravity="center_vertical"
        android:linksClickable="true"
        android:text="@string/financial_can_upload"
        android:textColor="@color/darkgray"
        android:textColorLink="@color/colorPrimary"
        android:textSize="@dimen/text_size_12" />

    <com.dumai.loan.view.LoadingButton
        android:id="@+id/loading_btn"
        style="@style/Button_List_Style"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:background="@drawable/button_login_bg"
        android:text="@string/submit_btn"
        android:textColor="@color/selector_btn_color"
        android:textSize="@dimen/pixel_size_16" />

</LinearLayout>
