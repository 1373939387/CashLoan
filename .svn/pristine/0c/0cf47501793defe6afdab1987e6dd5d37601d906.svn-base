<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dumai.xianjindai.activity.RegisterActivity">

    <include layout="@layout/toolbar" />


    <LinearLayout
        android:id="@+id/logo03"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/logo02"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical|left"
            android:background="@drawable/icon_identity" />

        <EditText
            android:id="@+id/login_name"
            android:layout_width="180dip"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:background="@null"
            android:hint="请输入您的帐号"
            android:maxLength="20"
            android:maxLines="1"
            android:numeric="integer"
            android:textColor="#ffc767"
            android:textColorHint="#ffc767"
            android:textSize="19sp"></EditText>
    </LinearLayout>

    <View
        android:id="@+id/logo04"
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:layout_below="@+id/logo03"
        android:background="#ffc767"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:id="@+id/logo05"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/logo04"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical|left"
            android:background="@drawable/icon_identity" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="180dip"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:background="@null"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:textColor="#ffc767"
            android:textColorHint="#ffc767"
            android:textSize="19sp"></EditText>
    </LinearLayout>

    <View
        android:id="@+id/logo011"
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:layout_below="@+id/logo05"
        android:background="#ffc767"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

</LinearLayout>
