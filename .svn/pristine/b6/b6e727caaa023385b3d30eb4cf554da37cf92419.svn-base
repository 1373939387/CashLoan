<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pixel_size_15"
        android:layout_marginRight="@dimen/pixel_size_15"
        android:layout_marginTop="@dimen/pixel_size_15"
        android:background="@drawable/full_data_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/pixel_size_15"
            android:layout_marginLeft="@dimen/pixel_size_15"
            android:layout_marginRight="@dimen/pixel_size_13"
            android:layout_marginTop="@dimen/pixel_size_16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/head_portrait"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_size_14" />

            <com.dumai.xianjindai.view.CircleImg
                android:id="@+id/backdrop"
                android:layout_width="@dimen/pixel_size_69"
                android:layout_height="@dimen/pixel_size_69"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/pixel_size_15"
                android:src="@drawable/btn_ensurequit" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pixel_size_15"
        android:layout_marginRight="@dimen/pixel_size_15"
        android:layout_marginTop="@dimen/pixel_size_15"
        android:background="@drawable/full_data_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/pixel_size_15"
            android:layout_marginLeft="@dimen/pixel_size_15"
            android:layout_marginRight="@dimen/pixel_size_13"
            android:layout_marginTop="@dimen/pixel_size_16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/nickname"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/pixel_size_15"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/text_size_16"
            android:background="@color/gainsboro" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/pixel_size_15"
            android:layout_marginLeft="@dimen/pixel_size_15"
            android:layout_marginRight="@dimen/pixel_size_13"
            android:layout_marginTop="@dimen/pixel_size_16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/account"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/pixel_size_15"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pixel_size_15"
        android:layout_marginRight="@dimen/pixel_size_15"
        android:layout_marginTop="@dimen/pixel_size_15"
        android:background="@drawable/full_data_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/pixel_size_15"
            android:layout_marginLeft="@dimen/pixel_size_15"
            android:layout_marginRight="@dimen/pixel_size_13"
            android:layout_marginTop="@dimen/pixel_size_16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/reset_psd"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/pixel_size_15"
                android:layout_weight="1"
                android:gravity="right|center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_next" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_signout"
        style="@style/Button_List_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pixel_size_28"
        android:layout_marginRight="@dimen/pixel_size_28"
        android:layout_marginTop="@dimen/pixel_size_39"
        android:background="@drawable/button_login_bg"
        android:gravity="center"
        android:text="@string/signout"
        android:textColor="@color/selector_btn_color"
        android:textSize="@dimen/text_size_18" />

</LinearLayout>
