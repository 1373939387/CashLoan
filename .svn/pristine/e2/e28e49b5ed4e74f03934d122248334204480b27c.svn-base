<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dumai.xianjindai.activity.MyRefereeActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pixel_size_14"
            android:layout_marginRight="@dimen/pixel_size_4"
            android:layout_marginTop="@dimen/pixel_size_11"
            android:background="@drawable/icon_authen_prompt"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pixel_size_10"
            android:gravity="center_vertical"
            android:text="@string/friend_ref"
            android:textColor="@color/back_4"
            android:textSize="@dimen/text_size_10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pixel_size_100"
        android:layout_marginLeft="@dimen/pixel_size_10"
        android:layout_marginRight="@dimen/pixel_size_10"
        android:layout_marginTop="@dimen/pixel_size_13"
        android:background="@drawable/full_data_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll_place"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_place"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/pixel_size_15"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/referree_name"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textColorHint="@color/darkgray"
                    android:textSize="@dimen/text_size_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/pixel_size_15"
                    android:background="@drawable/icon_contact" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/pixel_size_15"
            android:background="@color/gainsboro" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_monthly_income"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_monthly_income"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/pixel_size_15"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/referee_phone"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textColorHint="@color/darkgray"
                    android:textSize="@dimen/text_size_13" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.dumai.xianjindai.view.LoadingButton
        android:id="@+id/loading_btn"
        style="@style/Button_List_Style"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/pixel_size_56"
        android:background="@drawable/button_login_bg"
        android:text="@string/submit_btn"
        android:textColor="@color/selector_btn_color"
        android:textSize="@dimen/pixel_size_16" />

</LinearLayout>
